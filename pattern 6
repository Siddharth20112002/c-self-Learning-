#include<iostream>
using namespace std;
int main()
{
    int k,n,l;
    cin>>n;
    for(int i=-n;i<=n;i++)
    {
        if(i<0)
        l=-i;
        else
        l=i;
     for(k=0;k<l;k++)
     {
        cout<<" ";
     }
   for(int j=1;j<=(n-k);j++)
    {
    cout<<"* ";
   
    }
    cout<<endl;
    }
}
