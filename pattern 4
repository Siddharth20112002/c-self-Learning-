#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;                                      
    //cout<<n;
    for(int i=0;i<n;i++)              
    {
        int s=n-i;
        for(int j=0;j<s;j++)
        {
            cout<<" ";
        }
        for(int j=0;j<2*i+1;j++)
        {
            cout<<"* ";
        }
        cout<<endl;
    }
}
